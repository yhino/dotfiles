	ci = commit
	st = status
	lg = log --graph --pretty=format:\"%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr / %ad)%C(reset) %C(cyan)<%an>%C(reset)\" --abbrev-commit --date=short
	lag = log --graph --all --pretty=format:\"%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr / %ad)%C(reset) %C(cyan)<%an>%C(reset)\" --abbrev-commit --date=short
